extends layout
block head
    <meta name="robots" content="noimageindex" />
    <link rel="Shortcut Icon" type="image/x-icon" href="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/ico/favicon.ico" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <link rel="apple-touch-icon-precomposed" href="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/ico/apple-touch-icon-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/ico/apple-touch-icon-72x72-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/ico/apple-touch-icon-114x114-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/ico/apple-touch-icon-144x144-precomposed.png" />
    <script type="text/javascript" src="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/scripts/jquery.js"></script>
    <script type="text/javascript" src="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/scripts/bluebar.js"></script>
    <script type="text/javascript" src="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/scripts/public/slideshow.js"></script>
    link(rel="stylesheet", type="text/css", href="/stylesheets/home.css")
block content
    body(class="page-home")
        .root
            .page
                .main
                    #home-bg
                    .wrap
                        #iphone.home-phones
                            #iphone-overlay
                                img(src="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/homepage/screenshot1.jpg" class="active")
                                img(src="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/homepage/screenshot2.jpg")
                                img(src="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/homepage/screenshot3.jpg")
                                img(src="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/homepage/screenshot4.jpg")
                                img(src="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/homepage/screenshot5.jpg")
                            i(class="home-phones-glare")
                        .content
                            a(href="/accounts/login/", class="home-login") Log in
                            h1(class="instagram-title") Instagram - Fast, beautiful photo sharing for your iPhone
                            .tab
                                .tab-content
                                    h1 Capture and Share the World&#39;s Moments
                                    p Instagram is a <strong>fast</strong>, <strong>beautiful</strong> and <strong>fun</strong> way to share your life with friends and family.
                                    p Take a picture or video, choose a filter to transform its look and feel, then post to Instagram — it&#39;s that easy. You can even share to Facebook, Twitter, Tumblr and more. It&#39;s a new way to see the world.
                                    p Oh yeah, did we mention it’s free?
                                    .platform-badge-container
                                    a(class="platform-badge", href="/download/ios/"): img(src="//d36xtkk24g8jdx.cloudfront.net/bluebar/309f14d/images/public/badge_ios.png", alt="Available on the App Store")
            footer(class="page-footer", role="contentinfo")
                .wrapper
                    nav
                        ul
                            li: a(href="/about/us/") About us
                            <li><a href="http://help.instagram.com/">Support</a></li>
                            <li><a href="http://blog.instagram.com/">Blog</a></li>
                            <li><a href="http://instagram.com/press/">Press</a></li>
                            <li><a href="/developer/">API</a></li>
                            <li><a href="/about/jobs/">Jobs</a></li>
                            <li><a href="/about/legal/privacy/">Privacy</a></li>
                            <li><a href="/about/legal/terms/">Terms</a></li>
                    p(class="copyright") &copy; 2014 #{site.title}
            #reactModalMountPoint